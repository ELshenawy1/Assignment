@{
    var routeValues = ViewContext.RouteData.Values;
    string controllerName = routeValues["controller"].ToString();
    string actionName = routeValues["action"].ToString();
}
<nav class="navbar navbar-expand-lg bg-primary mb-4" data-bs-theme="dark">
    <div class="container-fluid">
        <a class="navbar-brand" asp-action="Index" asp-controller="Home">Techno Management</a>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav me-auto">
               
                @if (User.IsInRole("Manager"))
                {
                    <li class="nav-item">
                        <a class="nav-link @(controllerName == "Vacation" && actionName == "Index"? "active" : "" )" asp-action="Index" asp-controller="Vacation">
                            Vacations Requests
                        </a>
                    </li>
                }
                else if (User.IsInRole("Employee"))
                {
                    <li class="nav-item">
                        <a class="nav-link @(controllerName == "Vacation" && actionName == "Create" ? "active" : "") " asp-action="Create" asp-controller="Vacation">
                            Request Vacation
                        </a>
                    </li>
                }

           
               

          
            </ul>

            <ul class="navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <span class="nav-link">
                            Welocme @User.Identity.Name
                        </span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Logout" asp-controller="Account">
                            Logout
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Registration" asp-controller="Account">
                            Register
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Login" asp-controller="Account">
                            Login
                        </a>
                    </li>
                }

            </ul>
        </div>
    </div>
</nav>